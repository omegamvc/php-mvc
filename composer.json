{
  "name": "sonypradana/php-mvc",
  "description": "Very light php mvc, include cli easyer to creat controller view and model quikly ",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Adriano Giovannini",
      "email": "agisoftt@gmail.com"
    }
  ],
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/omegamvc/php-library"
    },
    {
      "type": "git",
      "url": "https://github.com/omegamvc/validator"
    }
  ],
  "require": {
    "php": "^8.3",
      "ext-http": "*",
      "ext-iconv": "*",
    "sonypradana/php-library": "dev-omega-fork",
    "sonypradana/validator": "dev-omega-fork",
    "react/event-loop": "^1.5"
  },
  "require-dev": {
    "filp/whoops": "^2.18"
  },
  "autoload": {
    "psr-4": {
        "App\\" : "app",
        "Database\\Seeders\\": "database/seeders/",
        "": [
            "app/library/",
            "app/services/"
        ]
    }
  },
  "autoload-dev": {
    "psr-4": {
        "Tests\\": "tests/"
    }
  },
"scripts": {
    "post-root-package-install": [
        "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  },
  "config": {
      "optimize-autoloader": true,
      "preferred-install": "dist",
      "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
